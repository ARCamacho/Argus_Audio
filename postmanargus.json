	"item": [
		{
			"name": "1. Listar Campanhas (Skills)",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/cmd/skills",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"cmd",
						"skills"
					]
				},
				"description": "Busca a lista de todas as campanhas e skills disponíveis para o seu token. Use o `idCampanha` retornado aqui nas outras chamadas."
			},
			"response": []
		},
		{
			"name": "2. Listar Ligações Detalhadas",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"idCampanha\": 1,\n    \"periodoInicial\": \"2025-08-08T00:00:00-03:00\",\n    \"periodoFinal\": \"2025-08-08T23:59:59-03:00\",\n    \"ultimoId\": 0\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/report/ligacoesdetalhadas",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"report",
						"ligacoesdetalhadas"
					]
				},
				"description": "Lista as ligações de uma campanha em um período específico. Lembre-se que o intervalo máximo é de 7 dias. Use o `idLigacao` retornado aqui para fazer o download."
			},
			"response": []
		},
		{
			"name": "3. Download da Gravação",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"idCampanha\": 1,\n    \"idLigacao\": 17286658,\n    \"formato\": \"MP3\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/cmd/downloadgravacao",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"cmd",
						"downloadgravacao"
					]
				},
				"description": "Efetua o download do arquivo de áudio de uma ligação específica."
			},
			"response": []
		}
